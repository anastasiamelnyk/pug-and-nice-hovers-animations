block variables
  include ../variables/variables.pug

doctype html
html
  head(lang=lang)
    block meta
      meta(charset='utf-8')
      meta(name='viewport' content='width=device-width initial-scale=1.0')
      meta(name='description' content=description)
      title #{title}
    block links
      link(rel='stylesheet' type='text/css' href=stylePath)

  body
    header
    main.container
      block content
    footer
      block footer

  block scripts
