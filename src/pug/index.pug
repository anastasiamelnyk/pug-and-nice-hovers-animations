extends template/template.pug

append links
  link(rel='preload' href='fonts/proximanova-regular-webfont.woff2' as='font' type='font/woff2' crossorigin='anonymous')
  link(rel='preload' href='fonts/proximanova-bold-webfont.woff2' as='font' type='font/woff2' crossorigin='anonymous')


block content
  h1.heading #{title}
  section.project-list
    h2.visually-hidden List of our projects
    include project-list/_project-list.pug
  section.project-box
    h2.visually-hidden Our projects in details
    include project-boxes/_project-boxes.pug
  section.project-form
    h2.project-form__heading Add project
    include project-form/_project-form.pug

